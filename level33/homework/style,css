    img {
      width: 50%;
    }

    /* პირველი ორი p თეგი – მწვანე ფერი RGB-ით /
    .rgb-green {
      color: rgb(0, 128, 0); / მწვანე /
    }

    /* შემდეგი ორი - ლურჯი ფერი HEX-ით /
    .hex-blue {
      color: #0000FF; / ლურჯი /
    }

    /* ბოლო ერთი – მწვანე HEX-ით /
    .hex-green {
